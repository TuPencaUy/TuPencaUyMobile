<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:TuPencaUy.ViewModel"
             x:Class="TuPencaUy.Views.SelectSitePage" x:DataType="viewModel:SelectSiteViewModel">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Margin="20"
                Spacing="40">
                <Image
                    Source="tupencauy_logo.png"
                    HeightRequest="185"
                    Aspect="AspectFit"/>

                <Label
                    Text="Bienvenido a tupenca.uy!"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />

                <Entry
                    x:Name="SiteEntry"
                    Placeholder="https://yoursite.tupenca.uy/"
                    Text="{Binding SiteUrl}"/>
                
                <Button
                    x:Name="ContinueBtn"
                    Text="Continue"
                    SemanticProperties.Hint="Continue"
                    Command="{Binding Path=GoToLoginPageCommand}"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>